<Window x:Class="TestViewbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestViewbox"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        WindowState="Maximized">
    <Viewbox Stretch="Uniform">
        <!-- https://stackoverflow.com/a/26537217/6131611 -->
        <Grid Width="1920" Height="1080">
            <Grid Name="Grid1" Background="Green">
                <Grid Width="400" Height="400" Background="LightGreen" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Name="Text1" FontSize="32" TextAlignment="Center" />
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>  
</Window>
